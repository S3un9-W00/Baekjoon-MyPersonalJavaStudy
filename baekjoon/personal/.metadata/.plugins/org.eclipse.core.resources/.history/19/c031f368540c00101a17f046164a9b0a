package no_1;
import java.util.Scanner;
import java.util.Arrays;

public class no_1 {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		int t = sc.nextInt();
		for(int i = 0; i < t; i++) {
			int cnt = sc.nextInt();
			String S = sc.next();

			for(int j = 0; j < S.length(); j++) {
				for(int k = 0; k < cnt; k++) {
					System.out.print(S.charAt(j));
				}
				System.out.println();
			}
		}
		
		
		sc.close();
	}
}
